CONTEXTS=$(kubectl config get-contexts -o name | grep gke)

if [[ -z $CONTEXTS ]]; then
  echo "There is no GKE context available, you may need to start a cluster first!"
  exit 1
fi

export RELEASE_NAME=nifi
export RELEASE_NAMESPACE=default
export CHART_PATH=.
export PROXY_HOST=nifi-on-gke
export ADMIN_CN=nifi-gke

export VALUES_FILES="-f values-gke.yaml -f values-lowdisk.yaml -f values-minzookeeper.yaml"
